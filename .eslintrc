{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": [2, "never"],
    "jsx-quotes": ["error", "prefer-single"],
    "prefer-template": 0,
    "semi": [2, "never"],
    "react/jsx-boolean-value": [2, "always"],
    "react/jsx-closing-bracket-location": 0,
    "react/prop-types": 0,
    "react/wrap-multilines": 0
  }
}
